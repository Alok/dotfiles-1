set background=dark

colors jellybeans

hi TermCursor ctermfg=red

let g:airline_theme='bubblegum'

set number
set cursorline
set relativenumber
set hidden

" Base sanity stuff
set laststatus=2
set noswapfile
set autowriteall

" Also, let me have settings per project
set exrc
set secure

" Global taboptions
set tabstop=4
set shiftwidth=4
set expandtab

set guifont=Anonymice\ Powerline\ Regular\ 12

set wildmode=full

set list listchars=tab:▷⋅,trail:⋅,nbsp:⋅

" vi:syntax=vim
