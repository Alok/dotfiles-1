set background=dark

colors jellybeans

" Term cursor highlight 
hi TermCursor ctermfg=red

" I prefer this colorscheme for airline
let g:airline_theme='bubblegum'

" Better nav
set number
set cursorline
set relativenumber
set hidden

" Base sanity stuff
set laststatus=2
set noswapfile
set autowriteall

" Also, let me have settings per project
set exrc
set secure

" Global taboptions
set tabstop=4
set shiftwidth=4
set expandtab

" Eyecandy
set guifont=Anonymice\ Powerline\ Regular\ 12

" Option complete
set wildmode=full

" Make whitespaces visible
set list listchars=tab:▷⋅,trail:⋅,nbsp:⋅

" vi:syntax=vim
